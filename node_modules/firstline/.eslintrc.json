{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {"sourceType": "module"},
  "rules": {
    "indent": ["error", 2],
    "keyword-spacing": "error",
    "linebreak-style": "error",
    "quotes": ["error","single"],
    "semi": "error",
    "space-before-blocks": "error",
    "space-before-function-paren": "error"
  }
}
